<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ResetPasswordActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/bar_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset password"
                android:layout_gravity="left"
                android:textColor="@color/colorLetter"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/send_email"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_bg"
                android:textSize="16sp"
                app:met_floatingLabel="normal"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textColorHighlight="@color/colorAccent"
                android:hint="Your E-mail"
                android:layout_marginTop="20dp"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You will receive an email to reset your password"
                android:layout_gravity="left"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:id="@+id/btn_reset"
                android:paddingLeft="@dimen/padding_20_dp"
                android:paddingRight="@dimen/padding_20_dp"
                android:drawablePadding="40dp"
                android:layout_gravity="left"
                android:drawableRight="@drawable/ic_arrow_img"
                android:background="@drawable/button_bg"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorLetter"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>