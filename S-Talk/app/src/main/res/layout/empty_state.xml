<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/user_es"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:paddingLeft="@dimen/margin_20_dp"
        android:paddingRight="@dimen/margin_20_dp">

        <ImageView
            android:id="@+id/es_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:src="@drawable/es_image" />

        <TextView
            android:id="@+id/es_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:text="It's empty for now"
            android:gravity="center"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/text_size_16_sp" />

        <TextView
            android:id="@+id/es_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:gravity="center"
            android:text="You can view the list of users here."
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/text_size_14_sp" />

    </RelativeLayout>

</FrameLayout>